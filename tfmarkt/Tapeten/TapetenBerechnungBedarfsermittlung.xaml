<Window x:Class="tfmarkt.TapetenBerechnung"
        x:Name="TapetenBerechnungWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="Tapeten Berechnung - Bedarf ermitteln" Height="300" Width="350">
    <Grid Name="Ermittlung">
        <Label FontSize="14" Content="Tapetendaten" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBlock Background="AliceBlue"  x:Name="tapeteBeschreibungTextBlock" HorizontalAlignment="Left" Margin="7,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="70" Width="314"/>

        <Label FontSize="14" Content="Raummaße festlegen:" HorizontalAlignment="Left" Margin="0,123,0,0" VerticalAlignment="Top" Height="146" Width="318"/>
        <Label Content="Raumhöhe" HorizontalAlignment="Left" Margin="7,152,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="wandhoeheTapeten" HorizontalAlignment="Left" Height="23" Margin="89,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Raumumfang" HorizontalAlignment="Left" Margin="7,184,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="wandbreiteTapeten" HorizontalAlignment="Left" Height="23" Margin="89,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Click="BerechnenButton" Content="Berechnen" HorizontalAlignment="Left" Margin="89,226,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="berechnenButton" Click="BerechnenButton" Content="Berechnen" HorizontalAlignment="Left" Margin="89,226,0,0" VerticalAlignment="Top" Width="75"/>

        <Label FontSize="14" Content="Ergebnis der Berechnung" Margin="0,268,26,116" />
        <Border BorderThickness="1" BorderBrush="Black" Margin="7,293,10,54">
            <TextBlock x:Name="ergebnisBox" Background="White" HorizontalAlignment="Left" Margin="9.2,9.2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.093,-0.087" Width="314" Height="53"/>
        </Border>
        <Button Content="Abbrechen" Click="Abbrechen" HorizontalAlignment="Left" Margin="14,377,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Zum Warenkorb hinzufügen" Click="TapeteDemWarenkorbHinzufuegen" HorizontalAlignment="Left" Margin="105,377,0,0" VerticalAlignment="Top" Width="162"/>
    </Grid>
</Window>
