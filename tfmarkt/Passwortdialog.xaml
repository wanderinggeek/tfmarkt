<Window x:Class="tfmarkt.Passwortdialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort erforderlich" Height="160" Width="300"
        Closed="Passwortdialog_OnClosed">
    <Grid>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="74,50,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:Name="Confirm" Content="Bestätigen" Click="Confirm_OnClick"  HorizontalAlignment="Left" Margin="34,88,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="AbbrechenButton" Click="AbbrechenButton_OnClick"  Content="Abbrechen" HorizontalAlignment="Left" Margin="186,88,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Geben Sie das Passwort für die Verwaltung ein" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
